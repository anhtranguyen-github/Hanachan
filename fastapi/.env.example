# ============================================================
# OpenAI
# ============================================================
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o
EMBEDDING_MODEL=text-embedding-3-small

# ============================================================
# Supabase
# ============================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
# Required for JWT validation — find in Supabase Dashboard → Settings → API → JWT Secret
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# ============================================================
# PostgreSQL (direct connection for memory modules)
# ============================================================
DB_HOST=127.0.0.1
DB_PORT=54422
DB_NAME=postgres
DB_USER=postgres
# Required — no default. Set to your actual DB password.
DB_PASSWORD=your_db_password_here

# ============================================================
# Qdrant (episodic memory vector store)
# ============================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=local-dev-key
QDRANT_COLLECTION=episodic_memory

# ============================================================
# Neo4j (semantic memory knowledge graph)
# ============================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password

# ============================================================
# CORS — comma-separated list of allowed origins
# Never use * with credentials. List explicit origins.
# ============================================================
ALLOWED_ORIGINS=["http://localhost:3000"]

# ============================================================
# Security — Rate Limiting
# ============================================================
# Trusted proxy IPs for rate limiting (comma-separated).
# X-Forwarded-For is only trusted from these IPs.
# Example: TRUSTED_PROXIES=10.0.0.1,10.0.0.2
TRUSTED_PROXIES=

# Rate limit per minute (per IP)
RATE_LIMIT_PER_MINUTE=20
